doctype html
meta(charset='utf-8')
title Hello world
meta(name='description', content='Hello world')
meta(name='keywords', content='hello,world')
meta(name='viewport',
  content='width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no')
link(rel='stylesheet' href='http://code.ionicframework.com/1.0.0-beta.14/css/ionic.min.css')
link(rel='stylesheet' href='css/style.css')
script(src='lib/encoding.min.js')
script(src='lib/csv.min.js')
if debug
  script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.js')
  script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular-animate.js')
  script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular-sanitize.js')
  script(src='http://code.ionicframework.com/1.0.0-beta.14/js/angular-ui/angular-ui-router.js')
  script(src='http://code.ionicframework.com/1.0.0-beta.14/js/ionic.js')
  script(src='http://code.ionicframework.com/1.0.0-beta.14/js/ionic-angular.js')
else
  script(src='cordova.js')
  script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular.min.js')
  script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular-animate.min.js')
  script(src='http://ajax.googleapis.com/ajax/libs/angularjs/1.3.9/angular-sanitize.min.js')
  script(src='http://code.ionicframework.com/1.0.0-beta.14/js/angular-ui/angular-ui-router.min.js')
  script(src='http://code.ionicframework.com/1.0.0-beta.14/js/ionic.min.js')
  script(src='http://code.ionicframework.com/1.0.0-beta.14/js/ionic-angular.min.js')
body
  ion-nav-bar.bar
    ion-nav-back-button.button-icon.ion-arrow-left-c
  ion-nav-view
  script(id='templates/sign-in.html', type='text/ng-template')
    ion-view(view-title='Sign-In')
      ion-content
        .list
          label.item.item-input
            span.input-label Username
            input(type='text', ng-model='user.username')
          label.item.item-input
            span.input-label Password
            input(type='password', ng-model='user.password')
        .padding
          button.button.button-block.button-positive(ng-click='signIn.execute(user)', ng-disabled='!signIn.isEnabled(user)')
            | Sign-In
  script(id='templates/tabs.html', type='text/ng-template')
    ion-view
      ion-tabs.tabs-icon-top
        ion-tab(title='Home', icon='ion-home', href='#/tab/home')
          ion-nav-view(name='home-tab')
        ion-tab(title='About', icon='ion-ios7-information', href='#/tab/about')
          ion-nav-view(name='about-tab')
        ion-tab(title='Sign-Out', icon='ion-log-out', href='#/sign-in')
  script(id='templates/home.html', type='text/ng-template')
    ion-view(view-title='Home', hide-back-button="true")
      ion-content
        ion-list
          ion-item(ng-repeat='item in items')
            | Hello, {{item}}!
  if debug
    script(src='http://cdnjs.cloudflare.com/ajax/libs/require.js/2.1.15/require.js',
      data-main='js/config')
  else
    script(src='http://cdnjs.cloudflare.com/ajax/libs/require.js/2.1.15/require.min.js',
      data-main='js/main')
